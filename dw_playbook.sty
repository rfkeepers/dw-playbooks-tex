\newcommand
    {\header}
    [4][l]
    {
        \ifx l#1%
        \begin{tikzpicture}[baseline=(current bounding box.north)]
            \filldraw [color=headerFill] (0,0) rectangle (#3,0.75);
            \draw [text width=1cm,color=white] (#4,0.2) node {\headertext{#2}};
        \end{tikzpicture}%
        \fi%
        \ifx r#1%
        \begin{tikzpicture}[baseline=(current bounding box.north)]
            \filldraw [color=headerFill] (0,0) rectangle (#3,0.75);
            \draw [text width=5cm,color=white] (#4,0.35) node {\headertext{#2}};
        \end{tikzpicture}%
        \fi%
    }

\newcommand
    {\stat}
    [2]
    {
        \def\x{0.85}
        \def\y{1.25}
        \begin{tikzpicture}[baseline=(current bounding box.north)]
            \draw [color=mainTextColor] (2.25,1.6) node {\LARGE \textbf{#2}};
            \draw [color=mainTextColor,thick] (0,0) rectangle (3,1.25);

            \draw [text width=1cm,color=mainTextColor] (0.65, 0.25) node {\small #1};
            \draw [color=mainTextColor,fill=mainPageColor,thick] (\x,\y) circle (7.55mm);
            \filldraw [color=mainTextColor,fill=mainPageColor,thick]
                (\x,\y-0.75)
                -- (\x-0.7,\y-0.225)
                -- (\x-0.435,\y+0.6)
                -- (\x+0.435,\y+0.6)
                -- (\x+0.7,\y-0.225)
                -- cycle;
            \draw [color=shade,fill=mainPageColor,thick] (\x,\y) circle (5.8mm);

            \draw [color=mainTextColor] (2.35,1) node {-1};
            \draw [color=mainTextColor,thick] (2.6,0.85) rectangle (2.9,1.15);
        \end{tikzpicture}
    }

    \newcommand
    {\selectable}
    [3][u]
    {
        \begin{minipage}{0.6cm}
            \begin{tikzpicture}[baseline=(current bounding box.north)]
                \draw [rounded corners,color=mainTextColor] (0,0) rectangle (0.5cm,0.5cm);
                \draw [color=mainTextColor] (0.25,0.25) node {\ifx x#1 \large X \normalsize \fi};
            \end{tikzpicture}
        \end{minipage}
        \begin{minipage}[t]{\dimexpr\linewidth-0.6cm\relax}
            \begin{FlushLeft}
                \movename{#2}\\[2mm]
                #3
            \end{FlushLeft}
        \end{minipage}
    }

